<section class='h-[85vh]'>
	<div
		class='container mx-auto border-2 rounded-xl shadow-xl grid grid-cols-5 overflow-hidden'
	>
		<div class='col-span-2'>

			<div class='h-full flex flex-col justify-center px-6 py-12 lg:px-8'>
				<div class='sm:mx-auto sm:w-full sm:max-w-sm'>
					<img class='h-10 w-auto' src='../../logo.png' alt='TuBootcamp' />
					<h2
						class='mt-10 text-start text-2xl font-bold leading-9 tracking-tight text-gray-900'
					>Empieza a estudiar</h2>
				</div>

				<div class='mt-10 sm:mx-auto sm:w-full sm:max-w-sm'>
					<form class='space-y-6' action='#' method='POST' id='registerForm'>
						<div>
							<label
								for='firstName'
								class='block text-sm font-medium leading-6 text-gray-900'
							>Nombre</label>
							<div class='mt-2'>
								<input
									id='inputNombre'
									name='firstName'
									type='text'
									required
									class='block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'
								/>
							</div>
						</div>
						<div>
							<label
								for='lastName'
								class='block text-sm font-medium leading-6 text-gray-900'
							>Apellido</label>
							<div class='mt-2'>
								<input
									id='inputApellido'
									name='lastName'
									type='text'
									required
									class='block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'
								/>
							</div>
						</div>
						<div>
							<label
								for='email'
								class='block text-sm font-medium leading-6 text-gray-900'
							>Email</label>
							<div class='mt-2'>
								<input
									id='inputEmail'
									name='email'
									type='email'
									required
									class='block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'
								/>
							</div>
						</div>
						<div>
							<label
								for='password'
								class='block text-sm font-medium leading-6 text-gray-900'
							>Contrase√±a</label>
							<div class='mt-2'>
								<input
									id='inputPassword'
									name='password'
									type='password' minlength="8" maxlength="24"
									required
									class='block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'
								/>
							</div>
						</div>

						<div>
							<button
								type='submit'
								class='flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600'
							>Registrar</button>
						</div>
					</form>
				</div>
			</div>
		</div>
		<div class='col-span-3'>
			<div class=''>

				<img
					class='w-full'
					src='https://images.unsplash.com/photo-1496917756835-20cb06e75b4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9'
					alt=''
				/>
			</div>
		</div>
	</div>
</section>
<script>
	const formRegistro = document.getElementById('registerForm');
	formRegistro.addEventListener('submit', (event)=>{
		event.preventDefault();
		var myHeaders = new Headers();
		myHeaders.append("Content-Type", "application/json");

		var raw = JSON.stringify({
			"firstName": inputNombre.value,
			"lastName": inputApellido.value,
			"email": inputEmail.value,
			"password": inputPassword.value
		});

		var requestOptions = {
			method: 'POST',
			headers: myHeaders,
			body: raw,
			redirect: 'follow'
		};

		fetch("/api/v1/user/signup", requestOptions)
			.then(response => response.json())
			.then(result => {
				if(result.code == 201){
					alert(result.message);
					formRegistro.reset();
					location.href='/'
				} else {
					alert(result.message)
				}
			})
			.catch(error => console.log('error', error));
		})
</script>