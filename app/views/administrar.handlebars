<section class=''>
	{{!-- HERO --}}
	<div class='shadow-xl shadow-slate-100'>

		<section class='container mx-auto'>

			<div
				class='container flex flex-col px-6 py-10 mx-auto space-y-6 lg:h-[32rem] lg:py-16 lg:flex-row lg:items-center'>
				<div class='w-full lg:w-1/2'>
					<div class='lg:max-w-lg'>
						<h1
							class='text-3xl text-center font-bold tracking-wide text-gray-800 lg:text-5xl lg:text-start'>
							Administra <span class="uppercase italic font-semibold">TuBootcamp</span>
						</h1>
						<div class='mt-8 space-y-5 text-center flex flex-col items-center lg:items-start'>
							<p class='flex items-center text-gray-700'>
								<svg xmlns='http://www.w3.org/2000/svg' class='w-6 h-6 text-blue-500' fill='none'
									viewBox='0 0 24 24' stroke='currentColor'>
									<path stroke-linecap='round' stroke-linejoin='round' stroke-width='2'
										d='M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z' />
								</svg>

								<span class=''>Crear Bootcamp</span>
							</p>

							<p class='flex items-center text-gray-700'>
								<svg xmlns='http://www.w3.org/2000/svg' class='w-6 h-6 text-blue-500' fill='none'
									viewBox='0 0 24 24' stroke='currentColor'>
									<path stroke-linecap='round' stroke-linejoin='round' stroke-width='2'
										d='M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z' />
								</svg>

								<span class=''>Registrar Estudiantes a Bootcamp</span>
							</p>

							<p class='flex items-center text-gray-700'>
								<svg xmlns='http://www.w3.org/2000/svg' class='w-6 h-6 text-blue-500' fill='none'
									viewBox='0 0 24 24' stroke='currentColor'>
									<path stroke-linecap='round' stroke-linejoin='round' stroke-width='2'
										d='M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z' />
								</svg>

								<span class=''>Revisar Bootcamps</span>
							</p>

						</div>
					</div>
				</div>
				<div
					class='flex items-center justify-center w-full h-96 bg-laptop bg-cover bg-no-repeat bg-center bg-fixed'>
				</div>
			</div>
		</section>
	</div>
	{{!-- CONTENT --}}
	<div class='mt-16 container mx-auto max-w-7xl overflow-hidden'>


		<div class='grid grid-cols-6 justify-stretch gap-4 px-6 py-8 '>
			{{!-- CREAR BOOTCAMP --}}
			{{> formCreateBootcamp }}
			{{!-- INSCRIBIR ESTUDIANTE A BOOTCAMP --}}
			{{> formRegisterStudent users=users bootcamps=bootcamps}}

		</div>
		<div class="px-6 py-8">
			<div class='text-start'>
				<h2 class='lg:text-6xl font-bold my-3 tracking-tight text-gray-800 text-4xl'>Detalles del Bootcamp</h2>

				<div class="">
					<form action="" class="space-y-6" id='bootcampById'>
						<label for='bootcamp' class='block text-lg font-light leading-6  text-gray-900'>Bootcamp</label>
						<div class='mt-2'>
							<select id="bootcampSelect" name='bootcamp' required
								class='block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'>
								<option disabled selected>Elige un bootcamp</option>
								{{#each bootcamps}}
								<option value="{{this.dataValues.id}}">{{this.dataValues.title}}
								</option>
								{{/each}}
							</select>
						</div>
						<div>
							<button type='submit'
								class='rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600'>Ver
								m√°s</button>
						</div>

					</form>
				</div>
			</div>
		</div>

	</div>
</section>
<script>
	let bootcampById = document.getElementById('bootcampById');
	bootcampById.addEventListener('submit', (event) => {
		event.preventDefault();
		let selectedId = bootcampSelect.value;
		location.href = `/bootcamp/id/${selectedId}?token=${token}`
	})
</script>

